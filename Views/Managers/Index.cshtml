@model IEnumerable<ProjectPrototype.Models.Manager>

@{
    ViewData["Title"] = "Managers";
}


<div class="jace-container">
    <h1 class="table-title">Managers</h1>
    <hr />
    <a class="table-management-button" asp-action="Index" asp-controller="Home">Go Back Home</a>
    <a class="table-management-button" asp-action="Create">Create New</a>
    <table class="table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Team)
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Team.TeamName)
                    </td>
                    <td>
                        <a class="table-management-button" asp-action="Edit" asp-route-id="@item.ManagerId">Edit</a>
                        <a class="table-management-button" asp-action="Details" asp-route-id="@item.ManagerId">Details</a>
                        <a class="table-management-button" asp-action="Delete" asp-route-id="@item.ManagerId">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
