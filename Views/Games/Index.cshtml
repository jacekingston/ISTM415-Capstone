@model IEnumerable<ProjectPrototype.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-action="Index" >
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<form action="Controllers/GamesController" method="post">
    <div>
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        <td>
                            
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.GameId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.GameId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.GameId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
