@model ProjectPrototype.Models.Game

@{
    ViewData["Title"] = "Edit Game";
}

<div class="container">
    <h1 class="table-title">Edit Game</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="GameId" />
                <div class="form-group">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateTime" class="control-label">Date/Time</label>
                    <input asp-for="DateTime" class="form-control" />
                    <span asp-validation-for="DateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="table-management-button" />
                    <a class="table-management-button" asp-action="Index">Back To Games</a>
                </div>
            </form>
        </div>
    </div>
</div>


