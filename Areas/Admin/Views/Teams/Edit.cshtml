@model ProjectPrototype.Models.Team

@{
    ViewData["Title"] = "Edit Team";
}

<div class="container">
    <h1 class="table-title">Edit @Model.TeamName</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TeamId" />
                <div class="form-group">
                    <label asp-for="TeamName" class="control-label"></label>
                    <input asp-for="TeamName" class="form-control" />
                    <span asp-validation-for="TeamName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mascot" class="control-label"></label>
                    <input asp-for="Mascot" class="form-control" />
                    <span asp-validation-for="Mascot" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Wins" class="control-label"></label>
                    <input asp-for="Wins" class="form-control" />
                    <span asp-validation-for="Wins" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Losses" class="control-label"></label>
                    <input asp-for="Losses" class="form-control" />
                    <span asp-validation-for="Losses" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="table-management-button" />
                    <a class="table-management-button" asp-action="Index">Back To Teams</a>
                </div>
            </form>
        </div>
    </div>
</div>


