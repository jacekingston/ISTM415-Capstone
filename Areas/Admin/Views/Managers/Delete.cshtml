@model ProjectPrototype.Models.Manager

@{
    ViewData["Title"] = "Delete Manager";
}

<div class="container">
    <h4 class="table-title">Are you sure you want to delete this?</h4>
    <div>
        <h3>@Model.FirstName @Model.LastName</h3>
        <hr />
        <form asp-action="Delete">
            <input type="hidden" asp-for="ManagerId" />
            <input type="submit" value="Delete" class="table-management-button" />
            <a class="table-management-button" asp-action="Index">Back To Managers</a>
        </form>
    </div>
</div>

